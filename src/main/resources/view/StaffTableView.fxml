<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.StackPane?>

<StackPane styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView fx:id="staffTableView" styleClass="background" stylesheets="@DarkTheme.css">
         <columns>
            <TableColumn fx:id="staffName" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="-1.0" text="Staff Name" />
            <TableColumn fx:id="username" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="-1.0" text="Username" />
            <TableColumn fx:id="role" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="-1.0" text="Role" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</StackPane>
